{% extends 'base.html.twig' %}

{% block title %}Liste des tickets{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Label</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>{{ ticket.label }}</td>
                    <td>
                        <a href="{{ path('tickets_show', {ticketId: ticket.id}) }}">Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="" class="btn btn-success">Test</a>
{% endblock %}